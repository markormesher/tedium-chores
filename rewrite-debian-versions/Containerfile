FROM docker.io/debian:12.11-slim
WORKDIR /app

LABEL image.registry=ghcr.io
LABEL image.name=markormesher/tedium-chore-rewrite-debian-versions

COPY ./rewrite-debian-versions.sh /usr/local/bin/.
RUN chmod +x /usr/local/bin/rewrite-debian-versions.sh

CMD ["/usr/local/bin/rewrite-debian-versions.sh"]
