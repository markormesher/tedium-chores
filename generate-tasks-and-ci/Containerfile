FROM docker.io/golang:1.25.1@sha256:a5e935dbd8bc3a5ea24388e376388c9a69b40628b6788a81658a801abbec8f2e AS builder
WORKDIR /app

ARG CGO_ENABLED=0

COPY go.mod go.sum ./
RUN go mod download

COPY ./cmd ./cmd

RUN go build -o ./build/main ./cmd/...

# ---

FROM ghcr.io/markormesher/scratch:v0.1.0@sha256:a2b570cd9813ce7fe7e6b0b388c3acc8aab4f077972917b5db453c39dd0e5680
WORKDIR /app

LABEL image.registry=ghcr.io
LABEL image.name=markormesher/tedium-chore-generate-tasks-and-ci

COPY --from=builder /app/build/main /usr/local/bin/

CMD ["/usr/local/bin/main"]
